@model Tiket



<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <script src="https://cdn.ckeditor.com/ckeditor5/35.3.0/classic/ckeditor.js"></script>
    <link href="~/assets/img/hgt.png" rel="icon">
    <link href="~/assets/img/hgt.png" rel="apple-touch-icon">
</head>

<body style="background-color: #e4eefa;">
    <main class="container my-4" style="padding: 20px;">
        <form asp-action="Create" asp-controller="Tiket" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 mb-2 text-center">
                    <h1 class="text-2xl font-weight-bold">Create Ticket</h1>
                </div>
            </div>
            <div class="card shadow" style="background-color: #ffffff;">
                <div class="card-header bg-white">
                    <h3 class="text-lg font-weight-bold">Ticket Details</h3>
                    <p class="text-muted small">Ticket details and classification.</p>      
                    <div class="card-body ticket-details">
                        <div class="form-group">
                            <label for="instansi">Instansi</label>
                            <input asp-for="instansi" class="form-control" required />
                            @Html.ValidationMessageFor(m => m.instansi, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <input asp-for="subject" class="form-control" required />
                            @Html.ValidationMessageFor(m => m.subject, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="deskripsi">Deskripsi</label>
                            <textarea asp-for="deskripsi" class="form-control" required></textarea>
                            @Html.ValidationMessageFor(m => m.deskripsi, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="gambarFile" class="text-custom">Unggah Gambar (Opsional)</label>
                            <input type="file" name="gambarFile" id="gambarFile" class="form-control-file" />
                        </div>

                        <div class="text-right" style="margin-bottom: 50px;">
                            <a href="/Dashboard/Tickets" class="btn btn-secondary" style="width: 100px;">Cancel</a>
                            <button type="submit" class="btn btn-primary" style="width: 150px; margin-right: 30px;">Create Ticket</button>
                        </div>
                    </div>
                </div>
            </div>  
        </form>
    </main>
  <script src="https://cdn.ckeditor.com/ckeditor5/35.3.0/classic/ckeditor.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script> <!-- Tambahkan referensi SignalR -->

</body>
</html>