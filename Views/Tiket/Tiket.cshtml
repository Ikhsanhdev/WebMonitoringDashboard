@model TiketModel

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">

    <title>Pusat Bantuan</title>


</head>
<body>
<div class="mainContent">
    <div class="alert alert-info" role="alert">
            <p>Selamat datang di halaman tiket. Di sini Anda bisa mengirimkan masalah atau keluhan.</p>
        </div>
    <h1 style="text-align: center;">Pusat Bantuan</h1>
    <div class="email-container">
    <!-- Bagian atas: Waktu dan tombol -->
    <div class="top-bar">
        <div class="time">11:23</div>
        <div class="actions">
            <!-- Tombol Sisipkan -->
            <button title="Sisipkan Lampiran">&#128206;</button> <!-- Ikon klip kertas untuk sisipkan -->
            <!-- Tombol Kirim -->
            <button title="Kirim">&#10148;</button> <!-- Ikon panah kirim -->
        </div>
    </div>
        <div class="contactFrm">
            @if (ViewBag.StatusMessage != null)
            {
                <p class="statusMsg @ViewBag.StatusClass">@ViewBag.StatusMessage</p>
            }

            <form asp-action="Index" method="post">
                
                <h4>Email</h4>
                <input type="email" asp-for="Email" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <h4>Subject</h4>
                <input type="text" asp-for="Subject" placeholder="Tulis subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>

                <h4>Message</h4>
                <textarea asp-for="Message" placeholder="Tulis keluhan Anda di sini"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>

                
            </form>
        </div>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
